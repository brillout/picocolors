{
  "name": "@brillout/picocolors",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.19",
  "module": "./dist/esm/picocolors.js",
  "// We don't use ./dist/esm/picocolors.d.ts because of what seems to be a TypeScript bug": "",
  "types": "./picocolors.d.ts",
  "main": "./dist/cjs/picocolors.js",
  "browser": "./dist/esm/picocolors.browser.js",
  "description": "The tiniest and the fastest library for terminal output formatting with ANSI colors",
  "scripts": {
    "dev": "tsc --watch",
    "build": "rm -rf dist/ && pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "prepublishOnly": "pnpm run build",
    "release": "npm version patch && npm publish && git push && git push --tags",
    "reset": "git clean -Xdf && pnpm install && pnpm run build"
  },
  "files": [
    "picocolors.d.ts",
    "types.ts",
    "dist/"
  ],
  "keywords": [
    "terminal",
    "colors",
    "formatting",
    "cli",
    "console"
  ],
  "author": "Alexey Raspopov",
  "repository": "alexeyraspopov/picocolors",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "18.11.9",
    "ansi-colors": "^4.1.1",
    "benchmark": "^2.1.4",
    "chalk": "^4.1.2",
    "clean-publish": "^3.0.3",
    "cli-color": "^2.0.0",
    "colorette": "^2.0.12",
    "kleur": "^4.1.4",
    "nanocolors": "^0.2.12",
    "prettier": "^2.4.1",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": true,
    "tabWidth": 2,
    "semi": false,
    "arrowParens": "avoid"
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
